#!/usr/bin/env bash

# thanks, Fred

paths=()


if [[ "$#" -lt 1 ]]
then
	echo "need file paths"
	exit 1
fi

for arg in "$@"
do
	if [[ "$arg" == "just a filler for future args" ]]
	then
		:
	else
		paths+=("$arg")
	fi
done

safeXargs(){
	xargs -d '\n' "$@"
}

i=0

for path in "${paths[@]}"
do
	i=$((i+1))

	if [[ ! -f "$path" ]]
	then
		echo "bad path arg: $path"
		continue
	fi

	# do work
	fileName="$(basename "$path" | perl -pe 's/^bob(?=\d+)//g' | perl -pe 's/[\s\(\)\-_]+$//g;' -pe 's/[\s\(\)\-_]+/_/g;')"
	fileNameNoExt="${fileName%.*}"
	ext="${fileName##*.}"
	ext="${ext,,}"
	dir="$(dirname "$path")"
	dirName="$(realpath "$path" | safeXargs dirname | safeXargs basename | perl -pe 's/[\s\(\)\-_]+$//g;' -pe 's/[\s\(\)\-_]+/_/g;')"

	# # if the file has a meaningless scan date, replace it with a sequence
	# # if [[ "$fileNameNoExt" =~ ^2025\d{10}_\d{3}$ ]]
	# if echo "$fileNameNoExt" | grep -iPq '^2025\d{10}_\d{3}$'
	# then
	# 	fileNameNoExt="$(printf "%03d0" "$i")"
	# fi

	if [[ "$fileNameNoExt" != "$dirName"* ]]
	then
		destName="split_${dirName}_${fileNameNoExt}.${ext}"
	else
		destName="split_${fileNameNoExt}.${ext}"
	fi
	destPath="$dir/$destName"

	echo "$destName"

	# TODO provide args to select between color modes
	"$HOME/bin/multicrop" -b white -d 75 -u 1 -f 10 "$path" "$destPath" > /dev/null
	# "$HOME/bin/multicrop" -c '50,50' -d 75 -u 1 -f 10 "$path" "$destPath" > /dev/null

done

