#!/usr/bin/env bash



if ( ! type jpegtran >/dev/null 2>&1)
then
	echo "jpegtran not installed"
	exit 1
fi

optQuiet=0
xasciiPath="$HOME/bin/xascii"

if ( type ascii-image-converter > /dev/null 2>&1 ) && [[ -f "$xasciiPath" ]]
then
	xascii(){
		"$xasciiPath" "$@"
	}
else
	xascii(){
		:
	}
fi

for arg in "$@"
do
	if [[ "$arg" =~ ^[0-9]{2,3}$ ]]
	then
		rotateArg="$arg"
	elif [[ "$arg" == "left" ]]
	then
		rotateArg="270"
	elif [[ "$arg" == "right" ]]
	then
		rotateArg="90"
	elif [[ "$arg" == "-q" || "$arg" == "--quiet" ]]
	then
		optQuiet=1
	fi
done

if [[ -z "$rotateArg" ]]
then
	echo "need rotate arg: left, right, or degrees"
	exit 1
fi

for path in "$@"
do
	if [[ "$path" == "left" || "$path" == "right" || "$path" == "$rotateArg" || "$path" == "-q" || "$path" == "--quiet" ]]
	then
		continue
	elif [[ ! -f "$path" ]]
	then
		echo "bad path arg: $path"
		exit 1
		# continue
	fi

	ext="${path##*.}"
	ext="${ext,,}"

	echo "$path"

	if [[ "$ext" =~ jpe?g ]]
	then
		jpegtran -perfect -rotate "$rotateArg" -outfile "$path" "$path" || mogrify -rotate "$rotateArg" "$path"
	else
		mogrify -rotate "$rotateArg" "$path"
	fi

	if [[ "$optQuiet" == 0 ]]
	then
		xascii "$path"
	fi
done
