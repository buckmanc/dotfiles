#!/usr/bin/env bash

processName="$1"
priority="$2"

if [[ -z "$processName" ]]
then
	echo "need process name"
	exit 1
elif [[ -z "$priority" ]]
then
	priority="idle"
fi

if [[ "$OSTYPE" = "msys" ]]
then
	pwshCommand="& \"$(realpath "$HOME/bin/_SetProcessPriority.ps1" | xargs -d '\n' cygpath -w)\" '$processName' '$priority'"
	pwshOutput="$(pwsh -noprofile -command "$pwshCommand" | tail -n 1)"
	if [[ -n "$pwshOutput" ]]
	then
		echo "$pwshOutput" | perl -pe 's/^.+? +\| //g'
	fi
else
	echo "$OSTYPE not supported"
fi
